extends _layout/pages.pug

block view
  .container
    .row.justify-content-center
      .col-md-8
        .card-group
          .card.p-4
            .card-body
              h1 Surebet Login
              //-form(action="/user/login")
              p.text-muted 로그인해주세요
              .input-group.mb-3
                .input-group-prepend
                  span.input-group-text
                    svg.c-icon
                      use(xlink:href="/vendors/@coreui/icons/sprites/free.svg#cil-user")
                input.form-control#form-email(type='text', placeholder='Email', value='')
              .input-group.mb-4
                .input-group-prepend
                  span.input-group-text
                    svg.c-icon
                      use(xlink:href="/vendors/@coreui/icons/sprites/free.svg#cil-lock-locked")
                input.form-control#form-pw(type='password', placeholder='Password', value='')
              .row
                .col-6
                  button.btn.btn-primary.px-4#btn-login(type='button') 로그인
                //-.col-6.text-right
                  button.btn.btn-link.px-0#btn-forgot(type='button') Forgot password?
          .card.text-white.bg-primary.py-5.d-md-down-none(style='width:44%')
            .card-body.text-center
              div
                h2 Sign up
                p
                  | 가입신청하면 관리자 검토/승인 후 사용이 가능합니다.
                button.btn.btn-lg.btn-outline-light.mt-3#btn-register 가입신청

block scripts
  script(src="/js/login.js")
