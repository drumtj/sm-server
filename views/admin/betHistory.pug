extends ../_layout/default.pug

block append styles
  style.
    .table td, .table th {
      text-align: center;   
    }
    .pmoney, .wallet {
      text-align: right;
    }
    .input-group>input:not(.date) {
      width: 110px !important;
    }
    .start-date, .end-date {
      width: 126px !important;
    }

block scripts
  script(src='/js/admin/betHistory.js')

block view
  h1 [관리자] 배팅기록
  hr  
  .fade-in.pre-hide#app          
    .card.edit-form
      //-.card-header
        //- .form-group.row
        label.col-form-label 수정
        .float-right
          button.btn.btn-square.btn-info(v-on:click="save") 저장
      .card-body
        .form-group.row
          table.table.table-sm.table-responsive-sm.table-striped.table-hover.table-bordered(style="font-size: 8pt")
            thead
              tr
                th(colspan="2")
                th.bg-primary(colspan="8")
                  img.c-icon.mr-2(src="/assets/img/pn-icon.png")
                  | 피나클
                th.bg-success(colspan="3")
                  img.c-icon.mr-2(src="/assets/img/bet365-icon.png")
                  | 벳365
                th.bg-danger(colspan="1") 수익
              tr
                th 유저
                th BetID
                th 종목
                th 리그/이벤트
                th team/side
                th 타입
                th 배당
                th 배팅금액
                th 계산
                th 상태
                // bet365
                th 배당
                th 배팅금액
                th 계산
                th 수익률
            tbody
              tr(v-if="!!editItem")
                td 
                  .text-primary {{editItem.user?editItem.user.email:""}}
                td {{editItem.betId}}                
                td {{editItem.sportName}}
                td
                  |{{editItem.event.leagueName}}
                  br
                  |{{editItem.event.betburger.pinnacle.eventName}}
                td {{getSide(editItem, 'pinnacle')}}
                td {{editItem.event.betburger.pinnacle.type.code + " " + editItem.event.betburger.pinnacle.type.set}}
                td {{editItem.siteOdds}}
                td ${{editItem.siteStake}}
                td(:class="getStatusColor(editItem)") {{editItem.pncResult}}
                td(:class="getStatusColor(editItem)")
                  a(style="cursor:pointer")
                    |{{editItem.betStatus}}
                td {{editItem.bookmakerOdds}}
                td ${{editItem.bookmakerStake}}
                td(:class="getStatusColor(editItem, true)") {{editItem.bet365Result}}
                td {{printProfit(editItem)}} ({{printProfitP(editItem)}})
        .form-group.row(v-for="form in forms")      
          label.col-md-3.col-form-label(:for="form.key") {{form.name}}
          .col-md-9(v-if="form.type=='number'")
            .input-group
              .input-group-prepend(v-if="form.prepend")
                span.input-group-text(v-html="form.prepend")
              input.form-control(v-on:input="update" :id="form.key" type="number" :name="form.key" :placeholder="form.placeholder?form.placeholder:''" :value="form.value")
              .input-group-append(v-if="form.append")
                span.input-group-text(v-html="form.append")
            span.help-block(v-if="form.help") {{form.help}}
          .col-md-9(v-if="form.type=='text'")
            .input-group
              .input-group-prepend(v-if="form.prepend")
                span.input-group-text(v-html="form.prepend")
              input.form-control(v-on:change="update" :id="form.key" type="text" :name="form.key" :placeholder="form.placeholder?form.placeholder:''" :value="form.value")
              .input-group-append(v-if="form.append")
                span.input-group-text(v-html="form.append")
            span.help-block(v-if="form.help") {{form.help}}
          .col-md-9(v-else-if="form.type=='select'")
            select.form-control(v-on:change="update" :id="form.key" :name="form.key")          
              option(v-for="opt in form.list" :value="opt.value" :selected="opt.value == form.value") {{opt.name}}
            span.help-block(v-if="form.help") {{form.help}}
          .col-md-9.col-form-label(v-else-if="form.type=='radio'")
            .form-check(v-for="opt in form.list")              
              input.form-check-input(v-on:change="update" :id="form.key+'_'+opt.value" type="radio" :checked="opt.value == form.value" :value="opt.value" :name="form.key")
              label.form-check-label(:for="form.key+'_'+opt.value") {{opt.name}}
          .col-md-9.col-form-label(v-else-if="form.type=='checkbox'")
            .form-check.checkbox(v-for="opt in form.list")
              input.form-check-input(v-on:change="update" :id="form.key+'_'+opt.value" type="checkbox" :checked="form.value[opt.value]")
              label.form-check-label(:for="form.key+'_'+opt.value") {{opt.name}}
    .row
      .col-md
        ul.nav.nav-tabs
          li.nav-item
            a.nav-link(href="#0" v-on:click="reload(0, 0)" :class="tab==0?'active':''") 배팅목록
          li.nav-item 
            a.nav-link(href="#1" v-on:click="reload(0, 1)" :class="tab==1?'active':''") 축구
          li.nav-item 
            a.nav-link(href="#2" v-on:click="reload(0, 2)" :class="tab==2?'active':''") 테니스
          li.nav-item 
            a.nav-link(href="#3" v-on:click="reload(0, 3)" :class="tab==3?'active':''") 하키
          li.nav-item 
            a.nav-link(href="#4" v-on:click="reload(0, 4)" :class="tab==4?'active':''") 농구
          li.nav-item 
            a.nav-link(href="#5" v-on:click="reload(0, 5)" :class="tab==5?'active':''") 야구
          li.nav-item 
            a.nav-link(href="#6" v-on:click="reload(0, 6)" :class="tab==6?'active':''") 미식축구
        .card
          .card-header
            div
              span 목록 ({{count}})
              span(style="margin-left:10px")
                .btn-group
                  button.btn.btn-sm.btn-primary(type="button" v-on:click="reload")
                    svg.c-icon.c-icon-lg
                      use(xlink:href="/vendors/@coreui/icons/sprites/solid.svg#cis-reload")
                  button.btn.btn-sm.btn-secondary(type="button" v-on:click="resetReload")
                    |검색조건 초기화
              span.float-right
                .form-inline
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 시작일
                      input.form-control.date.start-date(type="text" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 종료일
                      input.form-control.date.end-date(type="text" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 상태
                      select.form-control.search-status(v-on:change="changeSearchStatus" :value="status")
                        option(value="") --------
                        option(value="ACCEPTED") ACCEPTED
                        option(value="WON") WON
                        option(value="LOSE") LOSE
                        option(value="CANCELLED") CANCELLED
                        option(value="REFUNDED") REFUNDED
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 이벤트명
                      input.form-control.search-event(type="text" :value="eventName?eventName:''" v-on:change="changeSearchEventName")
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text BetID
                      input.form-control.search-betid(type="text" :value="betId?betId:''" v-on:change="changeSearchBetId")
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text ID
                      input.form-control.search-id(type="text" :value="accountId?accountId:''" v-on:change="changeSearchId")
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 타입
                      select.form-control.search-bettype(v-on:change="changeSearchBetType" :value="betType||''")
                        option(value="") --------
                        option(value="MONEYLINE") MONEYLINE
                        option(value="SPREAD") SPREAD
                        option(value="TOTAL_POINTS") TOTAL_POINTS
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 유저
                      select.form-control.search-email(v-on:change="changeSearchEmail" :value="email?email:''")
                        option(value="") --------
                        option(v-if="!!user" v-for="user in users" :value="user.email") {{user.email}}
                      //-input.form-control.search-email(type="text" :value="email?email:''" v-on:change="changeSearchEmail")              
                  .form-group
                    button.btn.btn-primary(type="button" v-on:click="reload(0)") 찾기
              span.float-right(style="margin-right:54px")
                .form-inline
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 배당조건1
                      input.form-control.search-odds1(type="number" step="0.1" min="1.1" :value="odds1?odds1:''" v-on:change="changeSearchOdds1")
                      .input-group-append
                        select.form-control.search-oddscon1(v-on:change="changeSearchOddsCon1" :value="oddsCon1||''")
                          option(value="") --------
                          option(value="<") 보다 작음
                          option(value="<=") 보다 작거나 같음
                          option(value="==") 같음
                          option(value=">") 보다 큼
                          option(value=">=") 보다 크거나 같음
                          option(value="!=") 같지않음
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 배당조건2
                      input.form-control.search-odds2(type="number" step="0.1" min="1.1" :value="odds2?odds2:''" v-on:change="changeSearchOdds2")
                      .input-group-append
                        select.form-control.search-oddscon2(v-on:change="changeSearchOddsCon2" :value="oddsCon2||''")
                          option(value="") --------
                          option(value="<") 보다 작음
                          option(value="<=") 보다 작거나 같음
                          option(value="==") 같음
                          option(value=">") 보다 큼
                          option(value=">=") 보다 크거나 같음
                          option(value="!=") 같지않음
              //-span.float-right(style="margin-right:30px;")
                .form-inline
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 시작일
                      input.form-control.start-date(type="text" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 종료일
                      input.form-control.end-date(type="text" readOnly)
            div              
              span.float-right(style="margin-right: 54px; margin-top:5px")
                .form-inline
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 피나클 총액
                      input.form-control.total-pmoney(type="text" :value="round(result.totalMoney,2)" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 미처리 수익
                      input.form-control.total-nyprofit(type="text" :value="round(result.notYetprofit,2)" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 완료된 수익
                      input.form-control.total-profit(type="text" :value="round(result.profit,2)" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 총배팅금액
                      input.form-control.total-bet(type="text" :value="round(result.betSum,2)" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 배팅진행중
                      input.form-control.total-nybet(type="text" :value="round(result.notYetBetSum,2)" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 벳365배팅진행중
                      input.form-control.total-nybet-bookmaker(type="text" :value="round(result.notYetBetSumBookmaker,2)" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text 총당첨금액
                      input.form-control.total-return(type="text" :value="round(result.returnSum,2)" readOnly)
                  .form-group
                    .input-group
                      .input-group-prepend
                        .input-group-text (배팅금 - 당첨금)
                      input.form-control.total-result(type="text" :value="round(result.resultSum,2)" readOnly)
          .card-body.table-responsive
            table.table.table-sm.table-responsive-sm.table-striped.table-hover.table-bordered(style="font-size: 8pt")
              thead
                tr
                  th(colspan="6")
                  th.bg-primary(colspan="6")
                    img.c-icon.mr-2(src="/assets/img/pn-icon.png")
                    | 피나클
                  th.bg-success(colspan="6")
                    img.c-icon.mr-2(src="/assets/img/bet365-icon.png")
                    | 벳365
                  th.bg-danger(colspan="2") 수익 / 배팅시간
                tr
                  th #
                  th 유저
                  th BetID
                  th 수정
                  th 종목
                  th 리그/이벤트
                  //-th 이벤트
                  th team/side
                  th 타입
                  th 배당
                  th 배팅금액
                  th 계산
                  th 상태
                  th ID
                  th team/side
                  th 타입
                  th 배당
                  th 배팅금액
                  th 계산
                  th 수익(수익률)
                  th 배팅시간                  
              tbody
                tr(v-for="item, i in list")
                  td {{i+1}}
                  td 
                    a(:href="'#'+tab" style="cursor:pointer" v-on:click="reload(0, tab, {email:item.user?item.user.email:''})")
                      |{{item.user?item.user.email:""}}
                  td
                    a(:href="'#'+tab" style="cursor:pointer" v-on:click="reload(0, tab, {betId:item.betId})")
                      |{{item.betId}}
                  td
                    button.btn.btn-sm.btn-primary(v-if="user.master" type="button" v-on:click="openEditModal(item)")
                      |수정
                  td {{item.sportName}}
                  //-리그/이벤트
                  td 
                    |{{item.event.leagueName}}
                    br
                    a(:href="'#'+tab" style="cursor:pointer" v-on:click="reload(0, tab, {eventName:item.event.betburger.pinnacle.eventName})")
                      |{{item.event.betburger.pinnacle.eventName}}
                  //-td {{item.event.betburger.pinnacle.eventName}}
                  // pinnacle
                  td {{getSide(item, 'pinnacle')}}
                  //-타입
                  td
                    |{{item.event.betburger.pinnacle.type.code + " " + item.event.betburger.pinnacle.type.set}}
                    br
                    a(:href="'#'+tab" style="cursor:pointer" v-on:click="reload(0, tab, {betType:item.betType})")
                      |{{item.betType}}
                  td {{item.siteOdds}}
                  td ${{item.siteStake}}
                  td(:class="getStatusColor(item)") {{item.pncResult}}
                  td(:class="getStatusColor(item)")
                    a(style="cursor:pointer" v-on:click="reload(0, tab, {status:item.betStatus})")
                      |{{item.betStatus}}
                  // bet365
                  td 
                    a(:href="'#'+tab" style="cursor:pointer" v-on:click="reload(0, tab, {accountId:item.account.id})")
                      |{{item.account.id}}                  
                  td {{getSide(item, 'bet365')}}
                  td 
                    a(:href="item.event.betburger.bet365.betLink" target="_blank")
                      |{{item.event.betburger.bet365.type.code + " " + item.event.betburger.bet365.type.set}}
                  td {{item.bookmakerOdds}}
                  td ${{round(item.bookmakerStake, 3)}}
                  td(:class="getStatusColor(item, true)") {{item.bet365Result}}
                  td {{printProfit(item)}} ({{printProfitP(item)}})
                  td {{(new Date(item.createdAt)).toLocaleString()}}                  
          nav
            ul.pagination.justify-content-center(v-if="list.length>0")
              li.page-item
                a.page-link(v-if="startPage>0" href="#" aria-label="Previous" v-on:click="reload(startPage-1)")
                  span(aria-hidden="true") «
                  span.sr-only Previous
              li.page-item(v-for="i in pages" :class="curPage==i?'active':''")
                a.page-link(v-if="curPage==i") {{i+1}}
                a.page-link(v-else href="#" v-on:click="reload(i)") {{i+1}}
              li.page-item
                a.page-link(v-if="maxPage>endPage" href="#" aria-label="Next" v-on:click="reload(endPage+1)")
                  span(aria-hidden="true") »
                  span.sr-only Next
