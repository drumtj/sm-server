extends ../_layout/pages.pug

block view  
  .container
    .row.justify-content-center
      .col-md-8
        .card-group
          .card.p-4
              .card-body
                h1 Surebet Admin Login
                //-form(action="/user/login")
                p.text-muted 로그인해주세요
                .input-group.mb-3
                  .input-group-prepend
                    span.input-group-text
                      svg.c-icon
                        use(xlink:href="/vendors/@coreui/icons/sprites/free.svg#cil-user")
                  input.form-control#form-email(type='text', placeholder='Email')
                .input-group.mb-4
                  .input-group-prepend
                    span.input-group-text
                      svg.c-icon
                        use(xlink:href="/vendors/@coreui/icons/sprites/free.svg#cil-lock-locked")
                  input.form-control#form-pw(type='password', placeholder='Password')
                .row
                  .col-6
                    button.btn.btn-primary.px-4#btn-login(type='button') 로그인                      

block scripts
  script(src="/js/admin/login.js")
